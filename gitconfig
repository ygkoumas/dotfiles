####[include]
####	path = CURRENT_FILE_PATH

[alias]
	contains = branch -vv -a --contains
	bran = symbolic-ref -q --short HEAD
	sub = submodule foreach
	follow = log --follow
	which = "symbolic-ref --short HEAD"
	cgrep = log -S
	unpushed = log @{u}..
	unpulled = log ..@{u}
	sname = show --name-only
	ours = checkout --ours
	theirs = checkout --theirs
[push]
	default = upstream
[merge]
	conflictstyle = diff3
[log]
	decorate = true
[core]
	editor = vim
	pager = less
	autocrlf = input
[pager]
	diff = less
[color]
	ui = always
[color "status"]
	branch = green
